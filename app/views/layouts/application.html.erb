<!DOCTYPE html>
<html>
<head>
  <title>EasyGym</title>
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<!-- Dropdown Structure -->
<ul id='dropdown1' class='dropdown-content' style="margin-top: 64px;">
  <li>
    <%= link_to workouts_path, style: "color: #00838f;" do %>
      <span class="mdi-hardware-keyboard-arrow-right left"></span>Workouts
    <%end%>
  </li>
  <li>
    <%= link_to exercises_path, style: "color: #00838f;" do %>
    <span class="mdi-hardware-keyboard-arrow-right left"></span>Exercises
    <%end%>
  </li>
  <li class="divider"></li>
  <li>
    <%= link_to statistics_path, style: "color: #00838f;" do %>
      <span class="mdi-av-equalizer left"></span>Statistics
    <%end%>
  </li>
</ul>

<!-- Navbar -->
<div class="navbar-fixed">
  <nav class="cyan darken-3">
    <div class="nav-wrapper">
      <%= link_to root_path do %>
        <div class="brand-logo">
          <i class="mdi-maps-directions-walk right">easy</i>
        </div>
      <% end %>
      <ul id="nav-mobile" class="right">
        <li>
          <a class='dropdown-button' href='#' data-activates='dropdown1' style="padding-right:30px;">
            <i class="mdi-navigation-menu right"></i>Menu
          </a>
        </li>
      </ul>
    </div>
  </nav>
</div>


<% if current_page?('/')%>
  <%= yield %>
<% else %>
<div class="container">
  <%= yield %>
</div>
<% end %>




</body>
</html>
