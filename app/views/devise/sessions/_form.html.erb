<div class="">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me,class: "filled-in" %> <%= f.label :remember_me %></div>
  <% end %>

  <br/>

    <div>
      <%= f.submit "Sign in",class: "btn cyan darken-3" %>
    </div>
  <% end %>

  <br/>
</div>